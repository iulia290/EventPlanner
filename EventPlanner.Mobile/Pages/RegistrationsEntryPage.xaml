<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventPlanner.Mobile.Pages.RegistrationsEntryPage"
             Title="Register to Event">

    <VerticalStackLayout Padding="16" Spacing="10">
        <Label Text="Register participant to event" FontAttributes="Bold"/>

        <Picker x:Name="ParticipantPicker" Title="Select participant" />
        <Picker x:Name="EventPicker" Title="Select event" />

        <Button Text="Register" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
