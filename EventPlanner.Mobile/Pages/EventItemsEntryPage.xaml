<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventPlanner.Mobile.Pages.EventItemsEntryPage"
             Title="Events">

    <VerticalStackLayout Padding="16" Spacing="10">
        <Button Text="Load events" Clicked="OnLoadClicked"/>
        <Button Text="Add event" Clicked="OnAddClicked"/>

        <CollectionView x:Name="EventsView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,6">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontSize="18"/>
                            <Label Text="{Binding Location}" FontSize="13"/>
                            <Label Text="{Binding Date}" FontSize="13"/>
                            <Button Text="Delete" CommandParameter="{Binding ID}" Clicked="OnDeleteClicked"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
